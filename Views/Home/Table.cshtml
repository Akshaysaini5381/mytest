@{
    ViewBag.Title = "Table";
}

@model List<mytest.db_context.table >


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {

                            <tr>



                                <td>@item.id</td>
                                <td>@item.name</td>
                                <td>@item.email</td>
                                <td>
                                    <a href="@Url.Action("Edit","Home",new { item.id})" class="btn btn-success ">Edit</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete","Home",new { item.id})" class="btn btn-danger ">Delete</a>
                                </td>









                            </tr>


                                }
                                </table>
                            </div>
                      
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    
    </div>
    <!-- /.container-fluid -->
</div>